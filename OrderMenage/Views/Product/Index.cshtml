@model IEnumerable<OrderMenage.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1>Produkty</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
            <th>
                <a asp-action="AddEdit" class="btn btn-sm btn-success">
                    Dodaj
                    <i class="fa-solid fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <th>
                @Html.DisplayFor(model => item.Id)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>

            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@item.Id">
                    <div class="brn-group btn-group-sm">
                        <a asp-action="AddEdit" asp-route-id="@item.Id" class="btn btn-warning">
                            Edytuj
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a> |
                        <button type="submit" class="btn btn-danger"
                                onclick="return confirm('Potwierdź usunięcie produktu')">
                            Usuń
                            <i class="far fa-trash-alt"></i>
                        </button>
                    </div>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
